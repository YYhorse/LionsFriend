.ScrollLayout{
  display: flex;
  position:fixed;
  width: 100%;
  height: 90%;
  flex-direction: column;
}
.HideLayout{
  display: none;
}
.LineLayout{
  display: flex;
  width: 100%;
  height: 10rpx;
  background-color: #F3F5F7;
}
.InputTitleLayout{
  display: flex;
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  align-items: center; 
  padding: 5px 0;
  border-bottom: 1px solid #ededed;
}
.TimeLayout{
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-direction: column;
  justify-content:center;
  padding: 5px 0;
  border-bottom: 1px solid #ededed;
}
.InputTitleText{
  font-size: 16px;
  color: black;
  font-weight:bold;
  margin-left: 50rpx;
  width: 200rpx;
}
.InputEditText{
  font-size: 16px;
  color: gray;
  border:  1px solid green; /*边界：大小1px, 为固体，为绿色*/
  border-radius: 10px;     /*边界角的弧度*/
  padding: 5px;
  text-align: right;
  margin-right: 10px;
}
.SingerEndLayout{
  display: flex;
  width: 80%;
  flex-direction: row;
  justify-content: flex-end;   
  align-items: center       
}
.ShowPhotoImage{
  display: flex;
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}
.SingerContextText{
  font-size: 16px;
  color: gainsboro;
  margin-right: 30rpx;
}
.SingerHideContextText{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;

  font-size: 16px;
  color: #d3d3d3;
  margin-right: 30rpx;
}
.BottomLayout{
  display:flex;
  position: fixed;
  left: 0px;
  bottom: 0px;
  z-index: 50;
  width: 100%;
  height: 48px;
  flex-direction:row;
  align-items: center;
  justify-content:center;
}
.ButtonView1{
  display:flex;
  width: 50%;
  height: 100%;
  background: green;
  color: white;
  border-radius: 0px;
  flex-direction:row;
  align-items: center;
  justify-content:center;
}
.ButtonView2{
